package clock;

public class Date {
	
	private int theYear = 2000;
	private int theMonth = 1;
	private int theDay = 1;
	
	private String dateSet(int year, int month, int day) {
		
		//year
		if (year >= 1950 && year <= 2200) {
			theYear = year;
		}
		else {
			theYear = 3000; 
		}
		
		//month
		if (month >= 1 && month <= 12) {
			theMonth = month;
		} 
		else {
			theMonth = 1;
		}
		
		//day
		if (day >= 1 && day <= 31) {
			theDay = day;
		} 
		else {
			theDay = 1; 
		}
		
		return theDay + "/" + theMonth + "/" + theYear;
	}

	
	private String showDate() {
		return theDay + "/" + theMonth + "/" + theYear; 
	}
}
